<h1>Book List</h1>
<a href="/books/new">Add New Book</a>
<ul>
  <% books.forEach(book => { %>
    <li>
      <%= book.title %> by <%= book.author %>
      <form action="/books/<%= book.id %>/delete" method="POST" style="display:inline;">
        <button type="submit">Delete</button>
      </form>
    </li>
  <% }); %>
</ul>
